<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salesdb.controller.AddController">
    <children>
        <Label text="Department:" />
        <TextField fx:id="departmentField" />

        <Label text="Surname and initials:" />
        <TextField fx:id="surnameAndInitialsField" />

        <Label text="position:" />
        <TextField fx:id="positionField" />

        <Label text="qualification:" />
        <TextField fx:id="qualificationField" />

        <Label text="hoursWorkedNumber:" />
        <TextField fx:id="hoursWorkedNumberField" />

        <Label text="hourPay:" />
        <TextField fx:id="hourPayField" />

        <HBox alignment="CENTER" spacing="10.0">
            <Button text="Add" onAction="#addEmployee" />
            <Button text="Cancel" onAction="#cancel" />
        </HBox>
    </children>
</VBox>
