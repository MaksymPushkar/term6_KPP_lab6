<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salesdb.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ListView fx:id="employeeList" prefHeight="200.0" prefWidth="600.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#addEmployee" text="Add" />
            <Button mnemonicParsing="false" onAction="#editEmployee" text="Edit" />
            <Button mnemonicParsing="false" onAction="#deleteEmployee" text="Delete" />
            <Button mnemonicParsing="false" onAction="#searchByCode" text="Search by position" />
            <Button mnemonicParsing="false" onAction="#searchByProduct" text="Search by qualification" />
             <Button mnemonicParsing="false" onAction="#outputPayroll" text="Output payroll" />
         </children>
      </HBox>
   </children>
</VBox>
